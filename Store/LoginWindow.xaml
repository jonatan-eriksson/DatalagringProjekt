<Window x:Class="Store.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightGray">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
                <Label Content="Username:" Margin="0 0 0 2" VerticalAlignment="Center"></Label>
            
                <TextBox Name="NameBox" Width="120" Padding="2" VerticalAlignment="Center"></TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
                <Button Click="Login_Click" Content="Login" VerticalAlignment="Center" Width="50" Margin="0 0 10 0"></Button>
                <Button Click="Quit_Click" Content="Quit" VerticalAlignment="Center" Width="50" Margin="10 0 0 0"></Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
