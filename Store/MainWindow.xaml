<Window x:Class="Store.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Store"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Name="MovieGrid" Background="DimGray" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition ></RowDefinition>
        </Grid.RowDefinitions>
        <Label  Grid.Column="2" Grid.Row="2" Name="Title" Content="Home" FontStyle="Oblique" FontSize="60" HorizontalAlignment="Center" />

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="10">
            <Button Height="50" HorizontalAlignment="Left" Click="GoHome_Click">Hem</Button>
            <Button Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Click="GoMyPage_Click">Min Sida</Button>
            <Button Height="50" Margin="0,0,0,20" Click="GoStore_Click">Filmer</Button>
        </StackPanel>
        
    </Grid>
</Window>
